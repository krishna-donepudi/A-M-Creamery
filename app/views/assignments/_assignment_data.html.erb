<div class="card">
  <div class="card-content">
    <h4>Assignment <%= @assignment.id %> </h4>
    <h5>for <%= link_to @assignment.employee.proper_name, @assignment.employee %> </h5>

    <br/>
    <b>Store&nbsp;&nbsp;</b>
      <%= link_to @assignment.store.name, @assignment.store %>
    <br><br/>

    <b>Pay Grade&nbsp;&nbsp;</b>
      <%= link_to @assignment.pay_grade.level, @assignment.pay_grade %>
    <br><br/>

    <b>Pay Grade Rate&nbsp;&nbsp;</b>
      <%= @assignment.pay_grade.current_pay_grade_rate.rate %>
    <br><br/>


    <b>Start Date&nbsp;&nbsp;</b>
      <%= @assignment.start_date.strftime("%-m/%-d/%y") %>
    <br><br/>

    <b>End Date&nbsp;&nbsp;</b>
      <%= @assignment.end_date.nil? ? "N/A" : @assignment.end_date.strftime("%-m/%-d/%y") %>
    <br><br/>

  </div>
</div>