<div class="card">
  <div class="card-content">
    <h4><%= @employee.proper_name %></h4>
    <h5><%= @employee.role.capitalize %></h5>
    <h5><%= @employee.username %></h5>

    
    <br />

    <b>Current Assignment:&nbsp;&nbsp;</b><br>
      <% if @employee.current_assignment.nil? %>
        n/a<br /><br />
      <% else %>
        <%= link_to @employee.current_assignment.store.name, store_path(@employee.current_assignment.store) %><br />
        since <%= @employee.current_assignment.start_date.strftime("%b %-d, %Y") %><br /><br />

      <% end %>

    <b>Current Pay Grade:&nbsp;&nbsp;</b><br>
      <% if @employee.current_assignment.nil? or @employee.current_assignment.pay_grade.nil? %>
        n/a<br /><br />
      <% else %>
        <%= @employee.current_assignment.pay_grade.level %><br /><br />

      <% end %>
    
    <b>Current Pay Grade Rate:&nbsp;&nbsp;</b><br>
      <% if @employee.current_assignment.nil? or @employee.current_assignment.pay_grade.nil? or  @employee.current_assignment.pay_grade.current_pay_grade_rate.nil?%>
        n/a<br /><br />
      <% else %>
        <%= @employee.current_assignment.pay_grade.current_pay_grade_rate.rate %><br /><br />

      <% end %>

    <b>Phone:&nbsp;&nbsp;</b><br>
      <%= number_to_phone @employee.phone %><br /><br />

    <b>Social Security Number:&nbsp;&nbsp;</b><br>
      <%= number_to_ssn @employee.ssn %><br /><br />

    <b>Date of Birth:&nbsp;&nbsp;</b><br>
      <%= @employee.date_of_birth.to_datetime.strftime("%b %-d, %Y") %><br /><br />


    <b>Active with AMC?&nbsp;&nbsp;</b>
      <%= @employee.active ? "Yes" : "No" %>
      <br>
  </div>
</div>
