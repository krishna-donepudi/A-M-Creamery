<div class="card">
  <div class="card-content">
    <h4> Pay Grade Rate History </h4>

    <% if @pay_grade_rates.nil? or @pay_grade_rates.empty? %>
      <p>There are no pay grade rates at this time. </p>
    <% else %>
      <table class="striped highlight">
        <thead>
          <th>Rate</th>
          <th>Start Date</th>
          <th>End Date</th>
        </thead>
        <% for pay_grade_rate in @pay_grade_rates %>
          <tr class="<%= cycle('dg_list_line_odd', 'dg_list_line_even') %>">
            <td><%= pay_grade_rate.rate%></td>
            <td><%= pay_grade_rate.start_date.strftime("%-m/%-d/%y")%></td>
            <td><%= pay_grade_rate.end_date.nil? ? "N/A" : pay_grade_rate.end_date.strftime("%-m/%-d/%y") %></td>
          </tr>
        <% end %>
      </table>
      <p class="supertiny"></p>
      <br />
    <% end %>
    <% if can? :create, PayGradeRate %>
      <div class="card grey lighten-3">
        <div class="card-action">
          <%= link_to "New Pay Grade Rate", new_pay_grade_rate_path(pay_grade_id: @pay_grade.id) %>
        </div>
      </div>
    <% end %>
  </div>
</div>