
<% unless @shift_jobs.nil? or @shift_jobs.empty?%>
  <div class="card">
    <div class="card-content">
      <h5>Jobs</h5>

      <table class="striped highlight">
        <% @shift_jobs.each do |shift_job| %>
          <tr %>
            <td><%= shift_job.job.name %></td>
            <% if can? :delete, shift_job %>
            <%= link_to(shift_job_path(shift_job), method: :delete, data: { confirm: 'Are you sure you wish to delete this job from this shift?' }) do %>
                <td><i class="material-icons">delete</i></td>
              <% end %>
            <% end%>
          </tr>
        <% end %>
      </table>
      <p class="supertiny"></p>
      <br />
    <% if can? :new, Shift %>
        <div class="card grey lighten-3">
          <div class="card-action">
            <%= link_to "Add a new job", new_shift_job_path(shift_id: @shift.id) %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<% else %>
  <div class="card">
    <div class="card-content">
      <h5>No jobs associated with this shift</h5>
      <p class="supertiny"></p>
      <br />
      <% if can? :new, Shift %>
        <div class="card grey lighten-3">
          <div class="card-action">
            <%= link_to "Add a new job", new_shift_job_path(shift_id: @shift.id) %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
