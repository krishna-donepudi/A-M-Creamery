<div class="row">
  <div class="col s8">
    <h6>New Pay Grade for <%= @pay_grade.level %> </h6>
    <%= simple_form_for(@pay_grade_rate) do |f| %>
      <%= f.error_notification %>
      <div class="row">
        <div class="form-inputs">
          <%= f.input :pay_grade_id, as: :hidden, input_html: { value: @pay_grade.id } %>
          <%= f.input :rate, include_blank: true %>
          <%= f.input :start_date, label_html: { class: 'active' } %>
        </div>
      </div>
      <div class="row">
        <div class="form-actions col s8">
          <%= f.button :submit %>
        </div>
      </div>
    <% end %>
  </div>
</div>